mod1 + Escape
	pkill -USR1 -x sxhkd

mod1 + q
	i3-msg kill

mod1 + shift + c
	i3-msg reload

mod1 + shift + r
	i3-msg restart

##### APPLICATIONS

mod1 + space
	rofi -show run

mod1 + Return
	alacritty

mod1 + d
	discord

mod1 + o
	obsidian

mod1 + n
	pcmanfm

mod1 + m
	steam

mod1 + t
	freetube

mod1 + b
	firefox

##### MOVEMENT

mod1 + {z,x}
    i3-msg split {v,h}

mod1 + {h,j,k,l}
    i3-msg focus {left,down,up,right}

mod1 + shift + {h,j,k,l}
    i3-msg move {left,down,up,right}

mod1 + f
	i3-msg fullscreen toggle

mod1 + shift + space
    i3-msg floating toggle

##### FLOATING

mod1 + shift + space
    i3-msg floating toggle

mod1 + super + space
    i3-msg focus mode_toggle

mod1 + a
    i3-msg focus parent

##### WORKSPACES

mod1 + {1-9,0}
	i3-msg workspace {1-9,10}

mod1 + shift+{1-9,0}
    i3-msg move container to workspace number {1-9,10}

mod1 + ctrl + {h,j,k,l}
    i3-msg resize {grow width 1 px or 1 ppt, shrink height 1 px or 1 ppt, grow height 1 px or 1 ppt, shrink width 1 px or 1 ppt}
